generator client {  
  provider = "prisma-client-js"  
}  

datasource db {  
  provider = "sqlite"  
  url      = env("DATABASE_URL")  
}  

model User {  
  Id    Int     @id @default(autoincrement())  
  Login  String  @unique
  Password String
  Role_id Int
}  

model Post {
  Id Int @id @default(autoincrement())
  Author_id Int
  Author_name String
  Text String
  LikeCounter Int
}